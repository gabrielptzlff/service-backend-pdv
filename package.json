{
  "name": "service-backend-pdv",
  "version": "1.0.0",
  "description": "Monolito MVC escrito em Typescript, NodeJS, JestJS e PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "tsc && jest",
    "test:watch": "tsc && jest --watch",
    "test:cov": "tsc && jest --coverage",
    "migrate": "ts-node ./src/infra/db/migrations/run-migrations.ts"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "http-errors": "^2.0.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.14",
    "repository-pattern": "^1.0.21",
    "routing-controllers": "^0.11.2",
    "tsyringe": "^4.10.0",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.15.4",
    "dotenv": "^17.2.0",
    "jest": "^29.6.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
